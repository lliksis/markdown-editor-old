{
    "name": "markdown-editor",
    "version": "0.1.0",
    "license": "MIT",
    "main": "main/index.js",
    "author": {
        "name": "lliksis"
    },
    "description": "A cross-platform markdown editor",
    "keywords": [
        "vite",
        "react",
        "electron",
        "typescript",
        "markdown"
    ],
    "repository": {
        "url": "https://github.com/lliksis/markdown-editor"
    },
    "productName": "markdown-editor",
    "scripts": {
        "dev": "concurrently \"npm dev:vite\" \" npm dev:electron\"",
        "dev:vite": "vite",
        "dev:electron": "npm run build:electron && electron .",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "tsc -p electron",
        "dist": "npm run build && electron-builder",
        "pack": "npm run build && electron-builder --dir",
        "clean": "rimraf dist main src/out",
        "type-check": "tsc",
        "lint": "eslint . --ext js,jsx,ts,tsx",
        "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix"
    },
    "dependencies": {
        "@codemirror/commands": "0.19.5",
        "@codemirror/gutter": "0.19.4",
        "@codemirror/highlight": "0.19.6",
        "@codemirror/history": "0.19.0",
        "@codemirror/lang-markdown": "0.19.2",
        "@codemirror/language": "0.19.3",
        "@codemirror/language-data": "0.19.1",
        "@codemirror/matchbrackets": "0.19.3",
        "@codemirror/state": "0.19.2",
        "@codemirror/theme-one-dark": "0.19.0",
        "@codemirror/view": "0.19.10",
        "@vitejs/plugin-react-refresh": "1.3.6",
        "electron": "15.1.0",
        "electron-is-dev": "2.0.0",
        "github-markdown-css": "5.0.0",
        "hast-util-sanitize": "4.0.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "remark-gfm": "3.0.0",
        "remark-parse": "10.0.0",
        "remark-react": "9.0.1",
        "unified": "10.1.0",
        "vite": "2.6.2"
    },
    "devDependencies": {
        "@types/node": "16.10.2",
        "@types/react": "17.0.26",
        "@types/react-dom": "17.0.3",
        "@typescript-eslint/eslint-plugin": "4.32.0",
        "@typescript-eslint/parser": "4.32.0",
        "autoprefixer": "10.3.6",
        "concurrently": "6.3.0",
        "electron-builder": "22.10.5",
        "eslint": "7.32.0",
        "eslint-config-airbnb": "18.2.1",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-import": "2.24.2",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.26.1",
        "postcss": "8.3.8",
        "prettier": "2.4.1",
        "tailwindcss": "2.2.16",
        "typescript": "4.4.3"
    },
    "build": {
        "asar": true,
        "files": [
            "main",
            "src/out"
        ],
        "directories": {
            "buildResources": "resources"
        }
    }
}
